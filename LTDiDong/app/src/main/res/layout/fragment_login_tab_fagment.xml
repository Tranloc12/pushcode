<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".LoginTabFragment">

    <!-- Phần ScrollView bao quanh tất cả nội dung cần cuộn -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- ImageView chứa icon trái cây -->
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="180dp"
                android:layout_gravity="center"
                android:layout_marginBottom="16dp"

                android:contentDescription="Main Icon"
                android:src="@drawable/mainicon" />

            <!-- EditText cho tên đăng nhập -->
            <EditText
                android:id="@+id/login_user"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:hint="Tên đăng nhập"
                android:drawableLeft="@drawable/user"
                android:drawablePadding="8dp"
                android:maxLines="1"
                android:inputType="text"
                android:background="@drawable/edittext_bkg" />

            <!-- EditText cho mật khẩu -->
            <EditText
                android:id="@+id/login_password"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="16dp"
                android:hint="Mật khẩu"
                android:drawableLeft="@drawable/baseline_lock_24"
                android:drawablePadding="8dp"
                android:maxLines="1"
                android:inputType="textPassword"
                android:background="@drawable/edittext_bkg" />

            <!-- Button Login -->
            <Button
                android:id="@+id/btLogin"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:text="Login"
                android:textSize="20sp"
                android:backgroundTint="@android:color/holo_green_light"
                android:paddingHorizontal="40dp" />
        </LinearLayout>

    </ScrollView>

</LinearLayout>
